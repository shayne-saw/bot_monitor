{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.6/.schema/devbox.schema.json",
  "packages": [
    "postgresql@latest",
    "elixir@latest",
    "erlang@latest",
    "nodejs@latest"
  ],
  "shell": {
    "init_hook": [
      "mkdir -p .devbox/virtenv/mix",
      "mkdir -p .devbox/virtenv/hex",
      "export MIX_HOME=$PWD/.devbox/virtenv/mix",
      "export HEX_HOME=$PWD/.devbox/virtenv/hex",
      "export ERL_AFLAGS='-kernel shell_history enabled'"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  },
  "env_from": ".local.env"
}
